---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05 from "@images/post-05.png";
---

<MainLayout title="Imagenes">
  <h1 class="text-5xl font-bold"> Imagenes</h1>
   <!-- component -->
    <img src="/assets/images/post-05.png" alt="" width="350">


    <h2>quality high</h2>
    <Image src={post05} alt="post-01" width={350} height={350} loading={"lazy"}  quality={'high'}/>
    <div style={{
      height: '3500px',
    }}>
    <h2>quality low</h2>
    <Image src={post05} alt="post-01" width={350} height={350} loading={"lazy"}  quality={'low'}/>
    <h2>Formatos</h2>
    <Image src={post05} alt="post-01" width={350} height={350} loading={"lazy"}  format="jpg" />


    <h3>Picture</h3>
    <Picture src={post05} alt="post-01" width={350} height={350} loading={"lazy"}  formats={['avif', 'webp', 'jpg']} widths={[200, 400, 800,post05.width]} 
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05.width}px`}
    />

    <div style={{
      height: '3500px',
    }}>

    </div>
</MainLayout>