---
import { Image } from 'astro:assets'

const { autor } = Astro.props

const { name, avatar, twitter, linkedIn, github, bio, subtitle } = autor.data
---

<!-- component -->
<div class='max-w-lg mx-auto bg-white rounded-lg shadow-md p-5'>
  <Image
    width={200}
    height={200}
    class='w-32 h-32 rounded-full mx-auto'
    src={avatar}
    alt='Profile picture'
  />
  <h2 class='text-center text-2xl font-semibold mt-3 text-blue-600'>{name}</h2>
  <p class='text-center text-gray-600 mt-1'>{subtitle}</p>
  <div class='flex justify-center mt-5'>
    <a href={twitter} class='text-blue-500 hover:text-blue-700 mx-3'>Twitter</a>
    <a href={linkedIn} class='text-blue-500 hover:text-blue-700 mx-3'
      >LinkedIn</a
    >
    <a href={github} class='text-blue-500 hover:text-blue-700 mx-3'>Github</a>
  </div>
  <div class='mt-1'>
    <h3 class='text-xl font-semibold'>Bio</h3>
    <p class='text-gray-600 mt-2'>
      {bio}
    </p>
  </div>
  <a href={`/blog/${autor.id}`} class='text-blue-500 hover:text-blue-700'
    >Leer mas</a
  >
</div>
