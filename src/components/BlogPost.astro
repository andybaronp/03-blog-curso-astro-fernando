---
import {Formater}  from '@utils/formater'
 

const {title,date,description,image,url } = Astro.props
---

<div class="lg:flex">
  <img class="object-cover w-full h-56 rounded-lg lg:w-64" src={image} alt="">

  <div class="flex flex-col justify-between py-6 lg:mx-6">
      <a href={url} class="text-xl font-semibold   hover:underline text-white ">
         {title}
      </a>
 {description}
      <span class="text-sm   text-gray-300">On: {Formater.formatNumber(date)}</span>
  </div>
</div>